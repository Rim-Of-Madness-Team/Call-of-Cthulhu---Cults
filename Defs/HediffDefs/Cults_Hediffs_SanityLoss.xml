<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="Cults_DiseaseBase" Abstract="True">
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
  </HediffDef>

  <HediffDef ParentName="Cults_DiseaseBase">
    <defName>Cults_SanityLoss</defName>
	<label>sanity loss</label>
    <initialSeverity>0.001</initialSeverity>
    <minSeverity>0.001</minSeverity>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <compClass>CultOfCthulhu.HediffComp_SanityLoss</compClass>
        <severityPerDay>-0.20</severityPerDay>
      </li>
    </comps>	
    <stages>
      <li>
        <label>initial</label>
		<becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
		<minSeverity>0.1</minSeverity>
		<painFactor>1.3</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.05</offset>
          </li>
		 </capMods>
        <statOffsets>
          <MentalBreakThreshold>0.1</MentalBreakThreshold>
        </statOffsets>		 		 
      </li>
	  <li>
        <label>minor</label>
        <minSeverity>0.25</minSeverity>
        <painFactor>1.5</painFactor>		
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.10</offset>
          </li>
		 </capMods>
        <statOffsets>
          <MentalBreakThreshold>0.25</MentalBreakThreshold>
        </statOffsets>		 		 
      </li>
	  <li>
		<label>major</label>
        <minSeverity>0.5</minSeverity>		
		<capMods>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.15</offset>
          </li>
		</capMods>
        <mentalStateGivers>
          <li>
            <mentalState>WanderPsychotic</mentalState>
            <mtbDays>9</mtbDays>
          </li>
        </mentalStateGivers>
        <statOffsets>
          <MentalBreakThreshold>0.4</MentalBreakThreshold>
        </statOffsets>		 		
	</li>	  
	<li>
		<label>severe</label>
		<painFactor>0.5</painFactor>
        <minSeverity>0.7</minSeverity>		
		<capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.8</setMax>
          </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0.3</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.25</offset>
          </li>
		</capMods>
        <mentalStateGivers>
          <li>
            <mentalState>WanderPsychotic</mentalState>
            <mtbDays>5.0</mtbDays>
          </li>
        </mentalStateGivers>
        <statOffsets>
          <MentalBreakThreshold>0.6</MentalBreakThreshold>
        </statOffsets>		 		
	</li>
	<li>
		<label>extreme</label>
		<painFactor>0.1</painFactor>
        <minSeverity>0.95</minSeverity>		
		<capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0.0</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.30</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.30</offset>
          </li>
		</capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>0.5</mtbDays>
          </li>
        </mentalStateGivers>
        <lifeThreatening>true</lifeThreatening>
        <deathMtbDays>10</deathMtbDays>		
        <statOffsets>
          <MentalBreakThreshold>0.8</MentalBreakThreshold>
        </statOffsets>		 		
	</li>
    </stages>
  </HediffDef>
  
</Defs>