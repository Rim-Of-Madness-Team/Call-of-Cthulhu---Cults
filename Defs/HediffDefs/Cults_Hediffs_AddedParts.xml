    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.25</offset>
            </li>
          </capMods>
      </li>
    </stages>
    <addedPartProps>
      <isBionic>false</isBionic>
      <isSolid>true</isSolid>
      <partEfficiency>1.25</partEfficiency>
    </addedPartProps>
  </HediffDef>
  
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>Cults_CthulhidEyestalk</defName>
    <label>horrifying eyestalk</label>
    <spawnThingOnRemoved>Cults_CthulhidEyestalk</spawnThingOnRemoved>
    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Sight</capacity>
              <offset>0.15</offset>
            </li>
          </capMods>
      </li>
    </stages>
    <addedPartProps>
      <isBionic>false</isBionic>
      <isSolid>true</isSolid>
      <partEfficiency>1.25</partEfficiency>
    </addedPartProps>
  </HediffDef>  
  
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>Cults_MonstrousBrain</defName>
    <label>monstrous brain</label>
    <spawnThingOnRemoved>Cults_MonstrousBrain</spawnThingOnRemoved>
    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.2</offset>
            </li>
          </capMods>
      </li>
    </stages>
    <addedPartProps>
      <isBionic>true</isBionic>
      <isSolid>true</isSolid>
