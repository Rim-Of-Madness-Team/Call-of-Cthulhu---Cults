  </HediffDef>

  
  <HediffDef>
    <defName>Cults_MonstrousBody</defName>
    <label>monstrous body</label>
        <hediffClass>CultOfCthulhu.Hediff_Transmogrified</hediffClass>
    <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
	    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>body</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>8</power>
            <cooldownTime>1.65</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.15</offset>
            </li>
          </capMods>
      </li>
    </stages>
    <addedPartProps>
