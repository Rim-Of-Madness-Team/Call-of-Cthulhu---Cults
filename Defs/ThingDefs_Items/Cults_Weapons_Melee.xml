<?xml version="1.0" encoding="utf-8" ?>

<ThingDefs>

  <ThingDef Name="BaseMeleeWeapon" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <equipmentType>Primary</equipmentType>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <selectable>True</selectable>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>Melee</li>
    </weaponTags>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_WeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>


  <ThingDef Name="BaseMeleeWeapon_Sharp" ParentName="BaseMeleeWeapon" Abstract="True">
    <recipeMaker>
    <defaultIngredientFilter>
      <categories>
        <li>Root</li>
      </categories>
      <exceptedThingDefs>
        <li>Silver</li>
        <li>Gold</li>
        <li>WoodLog</li>
      </exceptedThingDefs>
    </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>


  <ThingDef ParentName="BaseMeleeWeapon_Sharp">
    <defName>MeleeWeapon_CultKris</defName>
    <label>cult kris</label>
    <description>One of humankind's oldest tools, the knife is both an everyday tool and a deadly weapon. This particular knife is designed and sanctified for the ritualistic carving of flesh.</description>
	<canBeSpawningInventory>false</canBeSpawningInventory>
    <graphicData>
      <texPath>Weapon/CultKris/CultKris</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>
    <costStuffCount>40</costStuffCount>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <MeleeWeapon_DamageAmount>8</MeleeWeapon_DamageAmount>
      <MeleeWeapon_Cooldown>1.66</MeleeWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <meleeDamageDef>Cut</meleeDamageDef>
      </li>
    </verbs>
  </ThingDef>


</ThingDefs>