<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- =====No Shirts===== -->

	<!-- =====Coats===== -->
	
	  <ThingDef Name="ApparelBastBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
		<techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
			<Beauty>-4</Beauty>
			<SellPriceFactor>0.70</SellPriceFactor>
		</statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
	
  <ThingDef Name="ApparelBastMakeableBase" ParentName="ApparelBastBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <exceptedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </exceptedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

	<ThingDef ParentName="ApparelBastMakeableBase">
		<defName>Apparel_BastRobes</defName>
		<description>This sacred wrap allows priests to preach with greater appeal by appealing to Bast. It also tends to allow for better preaching in locations that face greater threat from the sun and heat.
		</description>
		<label>cultist vestments (bast)</label>
		<graphicData>
			<texPath>Apparel/BastRobes</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Cloth>75</Cloth>
		</costList>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
            <Mass>0.35</Mass>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToMake>22000</WorkToMake>
			<Insulation_Cold>-30</Insulation_Cold>
			<Insulation_Heat>15</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.3</SocialImpact>
			<ResearchSpeed>0.05</ResearchSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/BastRobes</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>

			<tags>
				<li>CallOfCthulhu_FrenziedCultist</li>
			</tags>
			<defaultOutfitTags>
				<li>CallOfCthulhu_FrenziedCultist</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
                <li>CraftingSpot</li>
			</recipeUsers>
			<researchPrerequisite>Forbidden_Attire</researchPrerequisite>
		</recipeMaker>
		<comps>
		  <li Class="CultOfCthulhu.CompProperties_FavoredObject">
		    <deities>
			  <li>
			    <deityDef>Entity_Bast</deityDef>
				<favorBonus>0.025</favorBonus>
			  </li>
			</deities>
		  </li>
		</comps>
		<colorGenerator Class="ColorGenerator_Single">
    <color>RGBA(1.0,1.0,1.0,1.0)</color>
</colorGenerator>
	</ThingDef>

	<!-- =======Hats======== -->
	
	  <ThingDef Name="BastHatMakeableBase" ParentName="ApparelBastMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="BastHatMakeableBase">
    <defName>Apparel_BastMask</defName>
    <label>cultist hood (bast mask)</label>
    <description>For worshippers of Bast, this mask is designed for the sole purpose of looking more pleasing to your deity. With it, your chants seem more potent and their insidious whispering is more constant.</description>
    <graphicData>
      <texPath>Apparel/Hats/BastMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
		<costList>
			<Cloth>25</Cloth>
		</costList>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <ArmorRating_Blunt>0.04</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.04</ArmorRating_Sharp>
      <Insulation_Heat>8</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Hats/BastMask</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>

      <tags>
        <li>CallOfCthulhu_FrenziedCultist</li>
      </tags>
      <defaultOutfitTags>
        <li>CallOfCthulhu_FrenziedCultist</li>
      </defaultOutfitTags>
    </apparel>
		<comps>
		  <li Class="CultOfCthulhu.CompProperties_FavoredObject">
		    <deities>
			  <li>
			    <deityDef>Entity_Bast</deityDef>
				<favorBonus>0.025</favorBonus>
			  </li>
			</deities>
		  </li>
		</comps>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>

                <li>CraftingSpot</li>
			</recipeUsers>
			<researchPrerequisite>Forbidden_Attire</researchPrerequisite>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Single">
    <color>RGBA(1.0,1.0,1.0,1.0)</color>
</colorGenerator>
  </ThingDef>

</Defs>
