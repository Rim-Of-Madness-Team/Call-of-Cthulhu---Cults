  <ThingDef ParentName="BuildingBase">
    <defName>Cults_MonolithNightmare</defName>
    <label>Monolith</label>
    <description>A mysterious upright standing block of stone. It has an insidious aura.</description>
    <thingClass>CultOfCthulhu.Building_Monolith</thingClass>
	<stealable>false</stealable>
    <category>Building</category><thingCategories><li>Buildings</li></thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <graphicData>
      <texPath>Building/MonolithNightmare/MonolithNightmare</texPath>
      <graphicClass>Graphic_Single</graphicClass>
