  <ThingDef ParentName="BuildingBase">
    <defName>Cults_SunkenShipChunk</defName>
    <label>sunken ship chunk</label>
    <description>A chunk of a naval craft. Can be deconstructed to discover treasures within.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Building/Exotic/SunkenShipChunk</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.1,0.1,1.8,1.8)</rect>
      </damageData>
      <shadowData>
        <volume>(1.3,0.3,1.0)</volume>
        <offset>(0,0,-0.13)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>35</pathCost>
    <blockWind>true</blockWind>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.50</fillPercent>
    <size>(2,2)</size>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-20</Beauty>
      <WorkToMake>12000</WorkToMake>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <killedLeavings>
      <ChunkSlagSteel>6</ChunkSlagSteel>
    </killedLeavings>
    <costList>
      <ComponentIndustrial>60</ComponentIndustrial>
      <Steel>400</Steel>
	  <WoodLog>400</WoodLog>
	  <Plasteel>20</Plasteel>
    </costList>
    <building>
      <claimable>false</claimable>
      <alwaysDeconstructible>true</alwaysDeconstructible>
    </building>
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>Cults_TreasureChest</defName>
    <label>treasure chest</label>
    <thingClass>CultOfCthulhu.Building_TreasureChest</thingClass>
    <graphicData>
      <texPath>Building/Exotic/TreasureChest/TreasureChest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <statBases>
      <WorkToMake>3200</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>A locked and sealed chest designed to keep goods and valuables safe from both man and nature.</description>
    <size>(1,1)</size>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(1,0,0)</interactionCellOffset>
    <costList>
      <WoodLog>60</WoodLog>
      <Gold>5</Gold>
      <Steel>4</Steel>
    </costList>
	<building>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Weapons</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.66</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
  </ThingDef>

